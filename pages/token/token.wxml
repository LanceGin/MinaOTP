<!--pages/token/token.wxml-->
<view class="section" wx:if="{{0 != tokens.length}}">
  <view class="token-wrp">
    <view class="token-box" wx:for="{{tokens}}" wx:for-item="token" wx:key="token-box">
      <view class="token token-left">
        <view class="issue">
          <text wx:if="{{null == token.issuer}}"> ,,Ծ‸Ծ,,</text>
          <text wx:else>{{token.issuer}}</text>
        </view>
        <view class="remark">
          <text wx:if="{{null == token.remark}}">未设置备注信息</text>
          <text wx:else>{{token.remark}}</text>
        </view>
      </view>
      <view class="token token-right">
        <view class="digit">
          <text wx:for="{{token.secret}}" wx:for-item="secret" wx:key="digit">{{secret}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
<view class="none-tip" wx:else>
  <view>
    <icon type="waiting" color="#222222" size="100" />
  </view>
  <view>
    <text>NOTHING</text>
  </view>
</view>
<view class="add-btn">
  <button bindtap="showActionSheet">添加</button>
</view>
